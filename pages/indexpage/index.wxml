<!--index.wxml-->
<view class="container">
  <view class='numbering'>
    <view class='logo'>
      <image src='../image/SOTER.webp'></image>
    </view>
    <view class='time'>
      <text class='h1'>NO.XXXXXXXXX\n</text>
      <text>XXXX年XX月XX日</text>
      <image src='../image/SOTER.webp'></image>
    </view>
  </view>
  <view class='electricity'>
    <view>
      <text>当前状态:\n</text>
      <text>电量:</text>
    </view>
    <view>
        <text class='gray'>锁定\n</text>
        <text class='green'>69%~大约3天</text>
    </view>
  </view>
  <view class='fingerprint'>
    <button bindtap="verify" plain='true' disabled='{{!m_button}}'>
		<image src='../image/nan2.1.png' wx:if="{{m_verify}}"></image>
		<image src='../image/nan.png' wx:else></image>		
	</button>
	<button bindtap="verify" plain='true' disabled='{{!f_button}}'>
		<image src='../image/nv2.1.png' wx:if="{{f_verify}}"></image>
		<image src='../image/nv.png' wx:else></image>
	</button>  
  </view>
	
</view>
